<div class= 'requests'>
    <div>
    <h3>
            waiting for you...
        </h3>
        <ul>
            <% current_user.friend_requests.each do |x| %>
                <li>
                    <%= User.find_by_id(x.user_id).name %> 
                </li>
            <% end %>
        </ul>
    </div>
    
    <div>
        <h3>
            waiting for them...
        </h3>
        <ul>
            <% current_user.pending_friends.each do |x| %>
                <li>
                    <%= User.find_by_id(x.friend_id).name %>
                </li>
            <% end %>
        </ul>
    </div>
        
</div>    

    
